  (lambda (n)
    (if (= n 0)
        1
        (* n (factorial (- n 1)))
        )
    )
)
;; iterative provess
(define factorial
  (lambda (n)
    (define factorial-iter 
      (lambda (n result)
        (if (= n 0)
            result
            (factorial-iter (- n 1) (* result n)) 
            )
        )
      )
    (factorial-iter n 1)
  )
)

